<Page5>:
    name: "Page5"
    orientation: "vertical"
    spacing: 50
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        orientation:'vertical'
        padding:100
        spacing:30
        Label:
            markup: True
            text:"[color=#FFFFFF]We are song[/color], One Piece\nsong by [color=#FFFFFF]Hiroshi Kitadani[/color], composed by [color=#FFFFFF]Kohei Tanaka[/color] with lyrics by [color=#FFFFFF]Shoko Fujibayashi[/color]. \nIt was used as the [color=#FFFFFF]first opening[/color] theme for the One Piece television anime,\n accompanying most of the episodes comprising the [color=#FFFFFF]East Blue Saga.[/color]"
            pos_hint :{'center_x':0.5, 'center_y':0.8}
            font_name: "Jokerman"
            color:'#00FFCE'
            font_size:17

        Button:
            markup: True
            size_hint:0.6, 0.1
            pos_hint :{'center_x':0.5, 'center_y':0.5}
            text:'PLAY'
            font_name: "Jokerman"
            font_size: 50
            color: "#111111"
            bold:True
            background_color: "#7fffd4"
            background_normal:""
            on_release: root.play_sound()

    BoxLayout:
        Button:
            markup: True
            text:"BACK"
            font_name: "Jokerman"
            size_hint: (.5, .25)
            pos_hint:{'center_x':.5, 'center_y':.1}
            font_size: 50
            color:"#7fffd4"
            background_color:"#000000"
