<MainWidget>:
<HomePage>:
    name: "Home"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            markup: True
            text:"          WELCOME TO KINDLE\nhave a great reading experience"
            font_name: "Jokerman"
            color:'#00FFCE'
            font_size: 40
        Button:
            markup: True
            text:"START"
            font_name: "Jokerman"
            size_hint: (.5, .25)
            pos_hint:{'center_x':.5, 'center_y':0}
            font_size: 50
            color:"black"
            background_color:"#ffd700"
            background_normal:""
            on_release:
                app.root.current = "Page1"
                root.manager.transition.direction = "left"

